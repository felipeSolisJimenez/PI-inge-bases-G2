<!DOCTYPE html>
<html>
@model FeLuisesScrumDEV.Models.Client
<head>
    @{
        ViewBag.Title = "Details";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <link href="~/FeStyles/feLuisesStyles.css" rel="stylesheet" type="text/css">
</head>


<body>

    <div>
        <div class="container">
            <h2>Detalles</h2>
            <hr />
            <div>
                <div class="card rounded" style="width: auto; height: auto;" id="shadow-Fe1">
                    <div class="card-header text-white" id="back-Fe1">
                        <h2>Cliente</h2>
                    </div>

                    <div class="card-body">

                        <dl class="dl-horizontal">
                            <dt>
                                <b>Nombre</b>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.clientName)
                            </dd>

                            <dt>
                                <b>Apellido</b>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.clientLastName)
                            </dd>

                            <dt>
                                <b>Segundo Apellido</b>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.clientSecondLastName)
                            </dd>

                            <dt>
                                <b>Compañía</b>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.company)
                            </dd>

                            <dt>
                                <b>Teléfono</b>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.tel)
                            </dd>

                            <dt>
                                <b>E-Mail</b>
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.email)
                            </dd>

                        </dl>
                    </div>
                    <div class="card-footer" id="back-Fe1">

                        <a class="btn" role="button" href="@Url.Action("Index", "Clients")">
                            <img src="~/Images/b-back.svg" width="30" height="30" class="d-inline-block align-top" alt="">
                        </a>
                        <a class="btn" role="button" href="@Url.Action("Edit", "Clients", new { id = Model.idClientPK })">
                            <img src="~/Images/edit.svg" width="30" height="30" class="d-inline-block align-top" alt="">
                        </a>

                        <a class="btn btn-outline-danger" role="button" href="@Url.Action("Delete", "Clients", new { id = Model.idClientPK })">
                            <img src="~/Images/delete.svg" width="30" height="30" class="d-inline-block align-top" alt="">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
